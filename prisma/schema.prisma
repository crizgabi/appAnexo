datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Tenant {
  id        String    @id @default(uuid())
  dbType    String
  dbEnvKey  String
  createdAt DateTime  @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  empresas  Empresa[]
}

model Empresa {
  id        String   @id
  nome      String?
  tenantId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  tenant Tenant @relation(fields: [tenantId], references: [id])
}